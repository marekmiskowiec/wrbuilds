---
import BasicLayout from "../../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";
import { formatDate } from "../../utils";
import Tags from "../../components/blog/Tags.astro";
import "../../components/theme.css";

const { slug } = Astro.params;

if (slug === undefined) {
  throw new Error("Slug is required");
}

const entry = await getEntry("blog", slug);

if (entry === undefined) {
  throw Astro.redirect("/404");
}

const { Content } = await entry?.render();
---

<BasicLayout>
  <section class="container mx-auto max-w-screen-lg mt-10 px-8">
    <a
      href="/blog"
      class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
      >Back To Articles</a
    >

    <article>
      <h1 class="article-title text-4xl font-bold mb-2">
        {entry.data.title}
      </h1>
      <h3 class="article-pubDate text-lg mb-2">
        Written by {entry.data.author} on {formatDate(entry.data.pubDate)}
      </h3>
      <Tags tags={entry.data.tags} />
      <img
        src={"/blog/" + entry.data.image}
        alt="Article Image"
        class="w-full h-auto rounded-xl my-6"
      />
      <div class="article-content">
        <Content />
      </div>
    </article>
  </section>
</BasicLayout>

<style is:global>
  p {
    margin: 20px 0;
  }

  h2 {
    margin: 20px 0;
    font-size: 2rem;
  }
</style>
